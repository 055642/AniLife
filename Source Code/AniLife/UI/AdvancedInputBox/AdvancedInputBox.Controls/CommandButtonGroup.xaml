<UserControl x:Class="AdvancedInputBox.Controls.CommandButtonGroup"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AUDX"
             mc:Ignorable="d" Margin="0">
    <Grid>
        <TextBlock x:Name="Required_TB" Text="*" Foreground="Red" HorizontalAlignment="Right" VerticalAlignment="Top" FontSize="24" Margin="0,0,10,0" FontFamily="{DynamicResource CLR_INPUTBOX_TEXT_FONT}" Visibility="Collapsed"/>
        <StackPanel x:Name="CommandButtons_Container" Orientation="Vertical"/>
    </Grid>
</UserControl>
