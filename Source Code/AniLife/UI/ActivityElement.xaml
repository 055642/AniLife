<UserControl x:Class="ActivityElement"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AniLife"
             mc:Ignorable="d" 
            Height="100" Width="260">
    <Grid>
        <Image x:Name="Anime_Picture" Source="{StaticResource WARNING}" HorizontalAlignment="Left" Width="60"/>
        <TextBlock x:Name="Activity_Value" FontFamily="{DynamicResource FONT}" FontWeight="{DynamicResource FONT_WEIGHT}" Text="{DynamicResource L_NOTAVAILABLE}" Foreground="{DynamicResource TEXT}" Margin="70,0,0,0" TextWrapping="Wrap"/>
    </Grid>
</UserControl>
