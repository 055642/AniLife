<UserControl x:Class="NotificationElement"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AniLife"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="300" Foreground="{DynamicResource TOPBARTEXT}">
    <Border CornerRadius="25" BorderThickness="2" BorderBrush="{DynamicResource ACCENT}" Background="{DynamicResource TOPBAR}">
        <Grid Margin="10">
            <TextBlock x:Name="Message_TB" Foreground="{DynamicResource TOPBARTEXT}" Background="{DynamicResource TOPBAR}" FontFamily="{DynamicResource FONT}" FontWeight="{DynamicResource FONT_WEIGHT}" FontSize="16" HorizontalAlignment="Left" VerticalAlignment="Center" TextWrapping="Wrap"/>
        </Grid>
    </Border>
</UserControl>
