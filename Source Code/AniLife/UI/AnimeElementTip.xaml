<UserControl x:Class="AnimeElementTip"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AniLife"
             mc:Ignorable="d" 
            Width="200" Height="120">
    <Grid>
        <TextBlock x:Name="TB_AnimeName" Text="{DynamicResource L_NOTAVAILABLE}" FontFamily="{DynamicResource FONT}" FontWeight="{DynamicResource FONT_WEIGHT}" Foreground="{DynamicResource TEXT}" TextWrapping="Wrap" FontSize="18.667" Margin="0,0,0,25"/>
        <TextBlock x:Name="TB_AnimeProg" Text="Progress: 000/000" FontFamily="{DynamicResource FONT}" FontWeight="{DynamicResource FONT_WEIGHT}" Foreground="{DynamicResource TEXT}" VerticalAlignment="Bottom" FontSize="16"/>
    </Grid>
</UserControl>
