<hc:BlurWindow x:Name="MeWindow" x:Class="MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        xmlns:system="clr-namespace:System;assembly=mscorlib"   
        xmlns:local="clr-namespace:AniLife"
        mc:Ignorable="d"
        Title="{DynamicResource L_APPNAME}" Height="720" Width="1280" Background="{DynamicResource BG}" Icon="{DynamicResource ICON}" BorderBrush="{DynamicResource ACCENT}" Foreground="{DynamicResource TEXT}" CloseButtonForeground="{DynamicResource ACCENT}" CloseButtonBackground="{DynamicResource CONTENT}" NonClientAreaBackground="{DynamicResource BG}" NonClientAreaForeground="{DynamicResource TEXT}" BorderThickness="1">
    <hc:BlurWindow.Resources>
        <local:StringLengthToVisibilityConverter x:Key="StringLengthToVisibilityConverter"/>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <local:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter"/>
        <system:Int32 x:Key="Collection_All">0</system:Int32>
        <system:Int32 x:Key="Collection_Watching">0</system:Int32>
        <system:Int32 x:Key="Collection_Completed">0</system:Int32>
        <system:Int32 x:Key="Collection_Paused">0</system:Int32>
        <system:Int32 x:Key="Collection_Dropped">0</system:Int32>
        <system:Int32 x:Key="Collection_Planning">0</system:Int32>
    </hc:BlurWindow.Resources>
    <hc:BlurWindow.NonClientAreaContent>
        <StackPanel VerticalAlignment="Stretch" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Foreground="{DynamicResource ACCENT}" Background="{DynamicResource CONTENT}" BorderThickness="0" hc:IconElement.Geometry="{StaticResource FullScreenGeometry}" Visibility="{Binding IsFullScreen, Converter={StaticResource InverseBooleanToVisibilityConverter}, ElementName=MeWindow}" Click="ToggleFullscreen"/>
            <Button Foreground="{DynamicResource ACCENT}" Background="{DynamicResource CONTENT}" BorderThickness="0" hc:IconElement.Geometry="{StaticResource FullScreenReturnGeometry}" Visibility="{Binding IsFullScreen, Converter={StaticResource BooleanToVisibilityConverter}, ElementName=MeWindow}" Click="ToggleFullscreen"/>
        </StackPanel>
    </hc:BlurWindow.NonClientAreaContent>
    <Grid>
        <Grid x:Name="TopBar" VerticalAlignment="Top" HorizontalAlignment="Stretch" Height="64" Background="{DynamicResource TOPBAR}">
            <Image x:Name="TopBar_Logo" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10" Source="{DynamicResource LOGO}"/>
            <Rectangle Fill="{DynamicResource ACCENT}" HorizontalAlignment="Left" VerticalAlignment="Stretch" Width="1" Margin="132,10,0,10"/>
            <Grid HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="140,0,0,10">
                <WrapPanel Orientation="Horizontal">
                    <hc:CircleProgressBar x:Name="TopBar_Loading" Width="32" Height="32" VerticalAlignment="Center" HorizontalAlignment="Left" Visibility="Visible" Margin="0,0,10,0"/>
                    <Image x:Name="TopBar_WARN" Source="{DynamicResource WARNING}" Height="32" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="0,0,10,0"/>
                    <Image x:Name="TopBar_NONET" Source="{DynamicResource NONET}" Height="32" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="0,0,10,0"/>
                    <Image x:Name="TopBar_UPDATES" Source="{DynamicResource UPDATE}" ToolTip="{DynamicResource L_UPDATESCHECK}" Height="32" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="0,0,10,0" RenderTransformOrigin="0.5,0.5"/>
                    <Image x:Name="TopBar_MAIL" Source="{DynamicResource MAIL}" Height="32" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="0,0,10,0">
                        <Image.ToolTip>
                            <WrapPanel x:Name="TopBar_MAIL_ToolTip_WP" Orientation="Vertical"/>
                        </Image.ToolTip>
                    </Image>
                    <Border x:Name="TopBar_MAIL_Notification_Text_Container" Background="{DynamicResource ACCENT}" Height="32" CornerRadius="0,0,15,0" Width="0" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="-5,0,5,0">
                        <TextBlock x:Name="TopBar_MAIL_Notification_Text" Foreground="{DynamicResource TOPBARTEXT}" FontFamily="{DynamicResource FONT}" FontWeight="{DynamicResource FONT_WEIGHT}" FontSize="16" VerticalAlignment="Center" Margin="10,0,0,0"/>
                    </Border>
                    <Grid Margin="0,0,10,0">
                        <Border x:Name="TopBar_Apps_Container" Background="{DynamicResource CONTENT}" Height="32" Width="0" CornerRadius="15" Opacity="1" HorizontalAlignment="Left" VerticalAlignment="Bottom">
                            <WrapPanel Orientation="Horizontal" Margin="37,0,0,0">
                                <Rectangle Fill="{DynamicResource ACCENT}" HorizontalAlignment="Left" VerticalAlignment="Stretch" Width="1" Margin="0,2,0,2"/>
                                <Ellipse x:Name="TopBar_Apps_AUDX" Stroke="{DynamicResource ACCENT}" Width="32" Height="32" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="5,0,0,0" Visibility="{Binding IsChecked, Converter={StaticResource BooleanToVisibilityConverter}, ElementName=SET_AUDX}">
                                    <Ellipse.Fill>
                                        <ImageBrush ImageSource="{DynamicResource MUSIC}" Stretch="Uniform"/>
                                    </Ellipse.Fill>
                                </Ellipse>
                                <Ellipse x:Name="TopBar_Apps_ImageViewer" Stroke="{DynamicResource ACCENT}" Width="32" Height="32" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="5,0,0,0">
                                    <Ellipse.Fill>
                                        <ImageBrush ImageSource="{DynamicResource IMAGE}" Stretch="Uniform"/>
                                    </Ellipse.Fill>
                                </Ellipse>
                                <Ellipse x:Name="TopBar_Apps_VideoViewer" Stroke="{DynamicResource ACCENT}" Width="32" Height="32" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="5,0,0,0" Visibility="Collapsed">
                                    <Ellipse.Fill>
                                        <ImageBrush ImageSource="{DynamicResource STREAM}" Stretch="Uniform"/>
                                    </Ellipse.Fill>
                                </Ellipse>
                            </WrapPanel>
                        </Border>
                        <Image x:Name="TopBar_Apps" Source="{DynamicResource APPS}" Height="32" HorizontalAlignment="Left" VerticalAlignment="Bottom"/>
                    </Grid>
                    <Grid Margin="0,0,10,0">
                        <Border Background="{DynamicResource CONTENT}" CornerRadius="15" Opacity="1" HorizontalAlignment="Left" VerticalAlignment="Bottom">
                            <WrapPanel x:Name="TopBar_Apps_AUDX_Controls" Visibility="Collapsed">
                                <Button x:Name="Media_Play" VerticalAlignment="Center" HorizontalAlignment="Left" Width="32" Height="32">
                                    <Button.Background>
                                        <ImageBrush ImageSource="{DynamicResource PLAY}" Stretch="Uniform"/>
                                    </Button.Background>
                                </Button>
                                <Button x:Name="Media_Pause" VerticalAlignment="Center" HorizontalAlignment="Left" Width="32" Height="32" Visibility="Collapsed">
                                    <Button.Background>
                                        <ImageBrush ImageSource="{DynamicResource PAUSE}" Stretch="Uniform"/>
                                    </Button.Background>
                                </Button>
                                <Slider x:Name="Media_Track" Margin="10,0,0,0" VerticalAlignment="Center" Width="150" IsMoveToPointEnabled="True"/>
                                <local:VolumeControl x:Name="Media_Volume" Height="25" Margin="10,0,10,0"/>
                            </WrapPanel>
                        </Border>
                    </Grid>
                </WrapPanel>
            </Grid>
            <Button x:Name="TopBar_Search" hc:IconElement.Geometry="{StaticResource SearchGeometry}"  Margin="0,0,10,0" Background="#000F3460" Foreground="{DynamicResource ACCENT}" BorderThickness="0" HorizontalAlignment="Right" VerticalAlignment="Center"/>
            <TextBox x:Name="TopBar_Search_Data" Width="0" Background="{DynamicResource CONTENT}" FontFamily="{DynamicResource FONT}" FontWeight="{DynamicResource FONT_WEIGHT}" Foreground="{DynamicResource TEXT}" BorderBrush="{DynamicResource ACCENT}" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,48,0"/>
        </Grid>
        <TabControl x:Name="MainTabControl" Margin="0,64,0,0" Background="{x:Null}" Style="{StaticResource TabControlInLine}">
            <TabItem Header="{DynamicResource L_HOME}" Background="{DynamicResource TOPBAR}" Foreground="{DynamicResource TOPBARTEXT}">
                <Grid Margin="{DynamicResource CONTENT_MARGIN}">
                    <StackPanel>
                        <TextBlock x:Name="Home_Quote" Foreground="{DynamicResource TEXT}" FontFamily="{DynamicResource FONT}" FontWeight="{DynamicResource FONT_WEIGHT}" FontSize="16" VerticalAlignment="Top" Margin="0,10,0,0" HorizontalAlignment="Center" TextWrapping="Wrap" TextAlignment="Center"/>
                        <TextBlock Text="{DynamicResource L_CURRENTLYWATCHING}" Foreground="{DynamicResource TEXT}" FontSize="18.667" FontFamily="{DynamicResource FONT}" FontWeight="{DynamicResource FONT_WEIGHT}" Margin="40,10,0,0"/>
                        <ScrollViewer VerticalAlignment="Top" HorizontalAlignment="Stretch" Height="140" Margin="30,10,30,0" VerticalScrollBarVisibility="Hidden" HorizontalScrollBarVisibility="Auto">
                            <WrapPanel x:Name="Home_AnimeInProgress" Orientation="Horizontal" VerticalAlignment="Top"  HorizontalAlignment="Stretch" Height="140" Background="{DynamicResource CONTENT}"/>
                        </ScrollViewer>
                        <TextBlock Text="{DynamicResource L_RECENTACTIVITY}" Foreground="{DynamicResource TEXT}" FontSize="18.667" FontFamily="{DynamicResource FONT}" FontWeight="{DynamicResource FONT_WEIGHT}" Margin="40,10,0,0"/>
                        <ScrollViewer x:Name="Home_Acitivity_SV" Margin="30,10,30,0" VerticalScrollBarVisibility="Auto" VerticalAlignment="Top" Height="300" Width="260" HorizontalAlignment="Left">
                            <WrapPanel x:Name="Home_Activity" Orientation="Vertical" Background="{DynamicResource CONTENT}"/>
                        </ScrollViewer>
                    </StackPanel>
                </Grid>
            </TabItem>
            <TabItem Header="{DynamicResource L_COLLECTION}" Background="{DynamicResource TOPBAR}" Foreground="{DynamicResource TOPBARTEXT}">
                <Grid Margin="{DynamicResource CONTENT_MARGIN}">
                    <StackPanel Orientation="Horizontal">
                        <Grid Background="{DynamicResource CONTENT}" Width="150" Margin="10">
                            <StackPanel Orientation="Vertical">
                                <TextBlock Text="{DynamicResource L_LISTS}" Foreground="{DynamicResource TEXT}" FontFamily="{DynamicResource FONT}" FontWeight="{DynamicResource FONT_WEIGHT}" Margin="10"/>
                                <ToggleButton x:Name="Collection_Show_All" Background="{DynamicResource CONTENT}" Foreground="{DynamicResource TEXT}" FontFamily="{DynamicResource FONT}" FontWeight="{DynamicResource FONT_WEIGHT}" Content="{DynamicResource L_ALL}" FontSize="16" Margin="0,10,0,0" HorizontalContentAlignment="Left" BorderThickness="0" ToolTip="{DynamicResource Collection_All}"/>
                                <ToggleButton x:Name="Collection_Show_Watching" Background="{DynamicResource CONTENT}" Foreground="{DynamicResource TEXT}" FontFamily="{DynamicResource FONT}" FontWeight="{DynamicResource FONT_WEIGHT}" Content="{DynamicResource L_WATCHING}" FontSize="16" Margin="0,10,0,0" HorizontalContentAlignment="Left" BorderThickness="0" ToolTip="{DynamicResource Collection_Watching}"/>
                                <ToggleButton x:Name="Collection_Show_Completed" Background="{DynamicResource CONTENT}" Foreground="{DynamicResource TEXT}" FontFamily="{DynamicResource FONT}" FontWeight="{DynamicResource FONT_WEIGHT}" Content="{DynamicResource L_COMPLETED}" FontSize="16" Margin="0,10,0,0" HorizontalContentAlignment="Left" BorderThickness="0" ToolTip="{DynamicResource Collection_Completed}"/>
                                <ToggleButton x:Name="Collection_Show_Paused" Background="{DynamicResource CONTENT}" Foreground="{DynamicResource TEXT}" FontFamily="{DynamicResource FONT}" FontWeight="{DynamicResource FONT_WEIGHT}" Content="{DynamicResource L_PAUSED}" FontSize="16" Margin="0,10,0,0" HorizontalContentAlignment="Left" BorderThickness="0" ToolTip="{DynamicResource Collection_Paused}"/>
                                <ToggleButton x:Name="Collection_Show_Dropped" Background="{DynamicResource CONTENT}" Foreground="{DynamicResource TEXT}" FontFamily="{DynamicResource FONT}" FontWeight="{DynamicResource FONT_WEIGHT}" Content="{DynamicResource L_DROPPED}" FontSize="16" Margin="0,10,0,0" HorizontalContentAlignment="Left" BorderThickness="0" ToolTip="{DynamicResource Collection_Dropped}"/>
                                <ToggleButton x:Name="Collection_Show_Planning" Background="{DynamicResource CONTENT}" Foreground="{DynamicResource TEXT}" FontFamily="{DynamicResource FONT}" FontWeight="{DynamicResource FONT_WEIGHT}" Content="{DynamicResource L_PLANNING}" FontSize="16" Margin="0,10,0,0" HorizontalContentAlignment="Left" BorderThickness="0" ToolTip="{DynamicResource Collection_Planning}"/>
                            </StackPanel>
                        </Grid>
                        <ScrollViewer x:Name="Collection_SV" VerticalScrollBarVisibility="Auto" Margin="10">
                            <StackPanel>
                                <TextBlock Text="{DynamicResource L_WATCHING}" Foreground="{DynamicResource TEXT}" FontSize="18.667" FontFamily="{DynamicResource FONT}" FontWeight="{DynamicResource FONT_WEIGHT}" Margin="40,10,0,0" Visibility="{Binding Visibility,ElementName=Collection_Watching}"/>
                                <ListView x:Name="Collection_Watching" Margin="10" Background="{DynamicResource CONTENT}" Width="Auto" FontFamily="{DynamicResource FONT}" FontWeight="{DynamicResource FONT_WEIGHT}" Foreground="{DynamicResource TEXT}">
                                    <ListView.View>
                                        <GridView>
                                            <GridViewColumn Header="{DynamicResource L_TITLE}" DisplayMemberBinding="{Binding Title}" Width="500"/>
                                            <GridViewColumn Header="{DynamicResource L_SCORE}" DisplayMemberBinding="{Binding Score}" Width="60"/>
                                            <GridViewColumn Header="{DynamicResource L_PROGRESS}" DisplayMemberBinding="{Binding Progress}" Width="70"/>
                                            <GridViewColumn Header="{DynamicResource L_TYPE}" DisplayMemberBinding="{Binding Type}" Width="100"/>
                                        </GridView>
                                    </ListView.View>
                                </ListView>
                                <TextBlock Text="{DynamicResource L_COMPLETED}" Foreground="{DynamicResource TEXT}" FontSize="18.667" FontFamily="{DynamicResource FONT}" FontWeight="{DynamicResource FONT_WEIGHT}" Margin="40,10,0,0"  Visibility="{Binding Visibility,ElementName=Collection_Completed}"/>
                                <ListView x:Name="Collection_Completed" Margin="10" Background="{DynamicResource CONTENT}" Width="Auto" FontFamily="{DynamicResource FONT}" FontWeight="{DynamicResource FONT_WEIGHT}" Foreground="{DynamicResource TEXT}">
                                    <ListView.View>
                                        <GridView>
                                            <GridViewColumn Header="{DynamicResource L_TITLE}" DisplayMemberBinding="{Binding Title}" Width="500"/>
                                            <GridViewColumn Header="{DynamicResource L_SCORE}" DisplayMemberBinding="{Binding Score}" Width="60"/>
                                            <GridViewColumn Header="{DynamicResource L_PROGRESS}" DisplayMemberBinding="{Binding Progress}" Width="70"/>
                                            <GridViewColumn Header="{DynamicResource L_TYPE}" DisplayMemberBinding="{Binding Type}" Width="100"/>
                                        </GridView>
                                    </ListView.View>
                                </ListView>
                                <TextBlock Text="{DynamicResource L_PAUSED}" Foreground="{DynamicResource TEXT}" FontSize="18.667" FontFamily="{DynamicResource FONT}" FontWeight="{DynamicResource FONT_WEIGHT}" Margin="40,10,0,0" Visibility="{Binding Visibility,ElementName=Collection_Paused}"/>
                                <ListView x:Name="Collection_Paused" Margin="10" Background="{DynamicResource CONTENT}" Width="Auto" FontFamily="{DynamicResource FONT}" FontWeight="{DynamicResource FONT_WEIGHT}" Foreground="{DynamicResource TEXT}">
                                    <ListView.View>
                                        <GridView>
                                            <GridViewColumn Header="{DynamicResource L_TITLE}" DisplayMemberBinding="{Binding Title}" Width="500"/>
                                            <GridViewColumn Header="{DynamicResource L_SCORE}" DisplayMemberBinding="{Binding Score}" Width="60"/>
                                            <GridViewColumn Header="{DynamicResource L_PROGRESS}" DisplayMemberBinding="{Binding Progress}" Width="70"/>
                                            <GridViewColumn Header="{DynamicResource L_TYPE}" DisplayMemberBinding="{Binding Type}" Width="100"/>
                                        </GridView>
                                    </ListView.View>
                                </ListView>
                                <TextBlock Text="{DynamicResource L_DROPPED}" Foreground="{DynamicResource TEXT}" FontSize="18.667" FontFamily="{DynamicResource FONT}" FontWeight="{DynamicResource FONT_WEIGHT}" Margin="40,10,0,0" Visibility="{Binding Visibility,ElementName=Collection_Dropped}"/>
                                <ListView x:Name="Collection_Dropped" Margin="10" Background="{DynamicResource CONTENT}" Width="Auto" FontFamily="{DynamicResource FONT}" FontWeight="{DynamicResource FONT_WEIGHT}" Foreground="{DynamicResource TEXT}">
                                    <ListView.View>
                                        <GridView>
                                            <GridViewColumn Header="{DynamicResource L_TITLE}" DisplayMemberBinding="{Binding Title}" Width="500"/>
                                            <GridViewColumn Header="{DynamicResource L_SCORE}" DisplayMemberBinding="{Binding Score}" Width="60"/>
                                            <GridViewColumn Header="{DynamicResource L_PROGRESS}" DisplayMemberBinding="{Binding Progress}" Width="70"/>
                                            <GridViewColumn Header="{DynamicResource L_TYPE}" DisplayMemberBinding="{Binding Type}" Width="100"/>
                                        </GridView>
                                    </ListView.View>
                                </ListView>
                                <TextBlock Text="{DynamicResource L_PLANNING}" Foreground="{DynamicResource TEXT}" FontSize="18.667" FontFamily="{DynamicResource FONT}" FontWeight="{DynamicResource FONT_WEIGHT}" Margin="40,10,0,0" Visibility="{Binding Visibility,ElementName=Collection_Planning}"/>
                                <ListView x:Name="Collection_Planning" Margin="10" Background="{DynamicResource CONTENT}" Width="Auto" FontFamily="{DynamicResource FONT}" FontWeight="{DynamicResource FONT_WEIGHT}" Foreground="{DynamicResource TEXT}">
                                    <ListView.View>
                                        <GridView>
                                            <GridViewColumn Header="{DynamicResource L_TITLE}" DisplayMemberBinding="{Binding Title}" Width="500"/>
                                            <GridViewColumn Header="{DynamicResource L_SCORE}" DisplayMemberBinding="{Binding Score}" Width="60"/>
                                            <GridViewColumn Header="{DynamicResource L_PROGRESS}" DisplayMemberBinding="{Binding Progress}" Width="70"/>
                                            <GridViewColumn Header="{DynamicResource L_TYPE}" DisplayMemberBinding="{Binding Type}" Width="100"/>
                                        </GridView>
                                    </ListView.View>
                                </ListView>
                            </StackPanel>
                        </ScrollViewer>
                    </StackPanel>
                </Grid>
            </TabItem>
            <TabItem Header="{DynamicResource L_APPNAME}" Background="{DynamicResource TOPBAR}" Foreground="{DynamicResource TOPBARTEXT}">
                <Grid Margin="{DynamicResource CONTENT_MARGIN}">
                    <ScrollViewer x:Name="AniLife_SV" VerticalScrollBarVisibility="Auto">
                        <StackPanel x:Name="AniLife_SP">
                            <WrapPanel>
                                <Image VerticalAlignment="Top" HorizontalAlignment="Left" Height="32" Source="{DynamicResource RATING}" />
                                <TextBlock Text="{DynamicResource L_FEATURED}" Foreground="{DynamicResource TEXT}" FontSize="18.667" FontFamily="{DynamicResource FONT}" FontWeight="{DynamicResource FONT_WEIGHT}" Margin="10,0,0,0" VerticalAlignment="Center"/>
                            </WrapPanel>
                            <WrapPanel x:Name="AniLife_Featured" Orientation="Horizontal" Background="{DynamicResource CONTENT}" Margin="0,10,0,0"/>
                            <WrapPanel Margin="0,10,0,0">
                                <Image VerticalAlignment="Top" HorizontalAlignment="Left" Height="32" Source="{DynamicResource FEMALE}" />
                                <TextBlock Text="{DynamicResource L_WAIFU}" Foreground="{DynamicResource TEXT}" FontSize="18.667" FontFamily="{DynamicResource FONT}" FontWeight="{DynamicResource FONT_WEIGHT}" Margin="10,0,0,0" VerticalAlignment="Center"/>
                            </WrapPanel>
                            <WrapPanel x:Name="AniLife_Waifu" Orientation="Horizontal" Background="{DynamicResource CONTENT}" Margin="0,10,0,0"/>
                            <WrapPanel Margin="0,10,0,0">
                                <Image VerticalAlignment="Top" HorizontalAlignment="Left" Height="32" Source="{DynamicResource MUSIC}" />
                                <TextBlock Text="{DynamicResource L_SOUNDTRACKS}" Foreground="{DynamicResource TEXT}" FontSize="18.667" FontFamily="{DynamicResource FONT}" FontWeight="{DynamicResource FONT_WEIGHT}" Margin="10,0,0,0" VerticalAlignment="Center"/>
                            </WrapPanel>
                            <WrapPanel x:Name="AniLife_SoundTracks" Orientation="Horizontal" Background="{DynamicResource CONTENT}" Margin="0,10,0,0"/>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </TabItem>
            <TabItem Header="{DynamicResource L_BROWSE}" Background="{DynamicResource TOPBAR}" Foreground="{DynamicResource TOPBARTEXT}">
                <Grid Margin="{DynamicResource CONTENT_MARGIN}">
                    <TabControl Background="{x:Null}" Style="{StaticResource TabControlInLine}">
                        <TabItem Header="{DynamicResource L_BROWSE}" Background="{DynamicResource TOPBAR}" Foreground="{DynamicResource TOPBARTEXT}">
                            <ScrollViewer x:Name="Browse_SV" VerticalScrollBarVisibility="Auto">
                                <StackPanel x:Name="Browse_SP">
                                    <Grid>
                                        <Image VerticalAlignment="Top" HorizontalAlignment="Left" Height="32" Source="{DynamicResource TRENDING}" />
                                        <TextBlock Text="{DynamicResource L_HOTANIME}" Foreground="{DynamicResource TEXT}" FontSize="18.667" FontFamily="{DynamicResource FONT}" FontWeight="{DynamicResource FONT_WEIGHT}" Margin="40,0,0,0" VerticalAlignment="Center"/>
                                    </Grid>
                                    <WrapPanel x:Name="Browse_HotAnimes" Orientation="Horizontal" Background="{DynamicResource CONTENT}" Margin="0,10,0,0"/>
                                    <Grid Margin="0,10,10,10">
                                        <Image VerticalAlignment="Top" HorizontalAlignment="Left" Height="32" Source="{DynamicResource ANIMEBOY}"/>
                                        <TextBlock Text="{DynamicResource L_RANDOMRECOMMENDATIONS}" Foreground="{DynamicResource TEXT}" FontSize="18.667" FontFamily="{DynamicResource FONT}" FontWeight="{DynamicResource FONT_WEIGHT}" Margin="40,0,0,0" VerticalAlignment="Center"/>
                                    </Grid>
                                    <WrapPanel x:Name="Browse_RandomRecommendations" Orientation="Horizontal" Background="{DynamicResource CONTENT}" Margin="0,10,0,0"/>
                                    <Grid Margin="0,10,10,10">
                                        <Image VerticalAlignment="Top" HorizontalAlignment="Left" Height="32" Source="{DynamicResource DRIVE}"/>
                                        <TextBlock Text="{DynamicResource L_OFFLINEBROWSING}" Foreground="{DynamicResource TEXT}" FontSize="18.667" FontFamily="{DynamicResource FONT}" FontWeight="{DynamicResource FONT_WEIGHT}" Margin="40,0,0,0" VerticalAlignment="Center"/>
                                    </Grid>
                                    <WrapPanel x:Name="Browse_OfflineBrowsing" Orientation="Horizontal" Background="{DynamicResource CONTENT}" Margin="0,10,0,0"/>
                                </StackPanel>
                            </ScrollViewer>
                        </TabItem>
                        <TabItem Header="{DynamicResource L_LOCALCOLLECTION}" Background="{DynamicResource TOPBAR}" Foreground="{DynamicResource TOPBARTEXT}">
                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <hc:CoverView x:Name="Browse_Library" Background="{DynamicResource CONTENT}" ItemMargin="10,10,0,0" ItemWidth="100" ItemHeight="140"/>
                            </ScrollViewer>
                        </TabItem>
                    </TabControl>
                </Grid>
            </TabItem>
            <TabItem Header="{DynamicResource L_SETTINGS}" Background="{DynamicResource TOPBAR}" Foreground="{DynamicResource TOPBARTEXT}">
                <Grid Margin="{DynamicResource CONTENT_MARGIN}">
                    <ScrollViewer x:Name="Settings_SV" VerticalScrollBarVisibility="Auto">
                        <StackPanel Orientation="Vertical" Background="{DynamicResource CONTENT}">
                            <Grid Margin="0,0,0,0">
                                <Image VerticalAlignment="Top" HorizontalAlignment="Left" Width="32" Source="{DynamicResource SETTINGS}"/>
                                <TextBlock Text="{DynamicResource L_GENERAL}" Foreground="{DynamicResource TEXT}" FontSize="18.667" FontFamily="{DynamicResource FONT}" FontWeight="{DynamicResource FONT_WEIGHT}" Margin="40,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                            </Grid>
                            <CheckBox x:Name="SET_CLIENT" Content="{DynamicResource L_SETCLIENT}" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="0,10,0,0" FontSize="16" FontFamily="{DynamicResource FONT}" FontWeight="{DynamicResource FONT_WEIGHT}" Foreground="{DynamicResource TEXT}" VerticalContentAlignment="Center"/>
                            <CheckBox x:Name="SET_BACKGROUNDLOADING" Content="{DynamicResource L_BACKGROUNDLOADING}" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="0,10,0,0" FontSize="16" FontFamily="{DynamicResource FONT}" FontWeight="{DynamicResource FONT_WEIGHT}" Foreground="{DynamicResource TEXT}" VerticalContentAlignment="Center"/>
                            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                <TextBlock Text="{DynamicResource L_LIBRARYPATHS}" Foreground="{DynamicResource TEXT}" FontSize="16" FontFamily="{DynamicResource FONT}" FontWeight="{DynamicResource FONT_WEIGHT}"  VerticalAlignment="Center" HorizontalAlignment="Left"/>
                                <ComboBox x:Name="SET_LIBRARY" BorderThickness="1" BorderBrush="{DynamicResource ACCENT}" Foreground="{DynamicResource TEXT}" FontSize="16" FontFamily="{DynamicResource FONT}" FontWeight="{DynamicResource FONT_WEIGHT}" Margin="10,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Left" Width="150"/>
                                <Button x:Name="SET_LIBRARY_ADD" Margin="10,0,0,0" BorderThickness="1" BorderBrush="{DynamicResource ACCENT}" Foreground="{DynamicResource ACCENT}" hc:IconElement.Geometry="{StaticResource AddGeometry}"/>
                                <Button x:Name="SET_LIBRARY_REMOVE" Margin="10,0,0,0" BorderThickness="1" BorderBrush="{DynamicResource ACCENT}" Foreground="{DynamicResource ACCENT}" hc:IconElement.Geometry="{StaticResource RemoveGeometry}"/>
                            </StackPanel>
                            <Grid Margin="0,10,0,0">
                                <Image VerticalAlignment="Top" HorizontalAlignment="Left" Width="32" Source="{DynamicResource BRUSH}" />
                                <TextBlock Text="{DynamicResource L_THEME}" Foreground="{DynamicResource TEXT}" FontSize="18.667" FontFamily="{DynamicResource FONT}" FontWeight="{DynamicResource FONT_WEIGHT}" Margin="40,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                            </Grid>
                            <StackPanel Orientation="Vertical" Margin="0,10,0,0">
                                <StackPanel Margin="0,0,0,10" Orientation="Horizontal">
                                    <TextBlock Text="{DynamicResource L_THEME}" Foreground="{DynamicResource TEXT}" FontSize="16" FontFamily="{DynamicResource FONT}" FontWeight="{DynamicResource FONT_WEIGHT}"  VerticalAlignment="Center" HorizontalAlignment="Left"/>
                                    <ComboBox x:Name="SET_THEME" BorderThickness="1" BorderBrush="{DynamicResource ACCENT}" Foreground="{DynamicResource TEXT}" FontSize="16" FontFamily="{DynamicResource FONT}" FontWeight="{DynamicResource FONT_WEIGHT}" Margin="10,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Left" Width="150">
                                        <ComboBoxItem Content="Default" Tag="Default"/>
                                        <ComboBoxItem Content="Glitter" Tag="Glitter"/>
                                        <ComboBoxItem Content="Violet" Tag="Violet"/>
                                        <ComboBoxItem Content="Blue" Tag="Blue"/>
                                        <ComboBoxItem Content="Light" Tag="Light"/>
                                        <ComboBoxItem Content="Browse" Tag="Browse"/>
                                        <ComboBoxItem Content="Custom" Tag="Custom"/>
                                    </ComboBox>
                                </StackPanel>
                                <CheckBox x:Name="SET_CLEARCUSTOMLOCKWALL" Content="{DynamicResource L_CLEARCUSTOMLOCKWALL}" VerticalAlignment="Center" HorizontalAlignment="Left" FontSize="16" FontFamily="{DynamicResource FONT}" FontWeight="{DynamicResource FONT_WEIGHT}" Foreground="{DynamicResource TEXT}" VerticalContentAlignment="Center"/>
                            </StackPanel>
                            <StackPanel Margin="0,10,0,0" Orientation="Horizontal">
                                <Image VerticalAlignment="Top" HorizontalAlignment="Left" Width="32" Source="{DynamicResource LANGUAGE}"/>
                                <TextBlock Text="{DynamicResource L_LANGUAGE}" Foreground="{DynamicResource TEXT}" FontSize="16" FontFamily="{DynamicResource FONT}" FontWeight="{DynamicResource FONT_WEIGHT}" Margin="10,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                                <ComboBox x:Name="SET_LANGUAGE" BorderThickness="1" BorderBrush="{DynamicResource ACCENT}" Foreground="{DynamicResource TEXT}" FontSize="16" FontFamily="{DynamicResource FONT}" FontWeight="{DynamicResource FONT_WEIGHT}" Margin="10,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Left" Width="150">
                                    <ComboBoxItem Content="English" Tag="EN_US"/>
                                    <ComboBoxItem Content="Arabic" Tag="AR_DZ"/>
                                    <ComboBoxItem Content="French" Tag="FR_FR"/>
                                    <ComboBoxItem Content="Browse" Tag="Browse"/>
                                </ComboBox>
                            </StackPanel>
                            <Grid Margin="0,10,0,0">
                                <Image VerticalAlignment="Top" HorizontalAlignment="Left" Width="32" Source="{DynamicResource CLOUD}" />
                                <TextBlock Text="{DynamicResource L_CLIENT}" Foreground="{DynamicResource TEXT}" FontSize="18.667" FontFamily="{DynamicResource FONT}" FontWeight="{DynamicResource FONT_WEIGHT}" Margin="40,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                            </Grid>
